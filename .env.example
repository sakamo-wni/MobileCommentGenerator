# LLM API Keys
# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API設定  
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API設定
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM設定
LLM_PRIMARY_PROVIDER=openai
LLM_SECONDARY_PROVIDER=anthropic
LLM_FALLBACK_ENABLED=true
LLM_CONFIG_FILE=config/llm_config.yaml

# Weather API設定（既存）
WEATHER_API_KEY=your_wxtech_api_key_here

# AWS設定（S3過去コメント取得用）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-northeast-1
S3_COMMENT_BUCKET=it-literacy-457604437098-ap-northeast-1

# アプリケーション設定
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# LangGraph設定
LANGGRAPH_ENABLE_WEATHER=true

# デフォルト設定
DEFAULT_WEATHER_LOCATION=稚内
WEATHER_FORECAST_HOURS=24
WEATHER_API_TIMEOUT=30

# パフォーマンス設定
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
MAX_RETRY_COUNT=5

# コメント生成設定
MAX_COMMENT_LENGTH=15
MIN_COMMENT_LENGTH=5
COMMENT_VALIDATION_ENABLED=true

# セキュリティ設定
RATE_LIMIT_ENABLED=true
API_KEY_ROTATION_ENABLED=false

# ログ設定
LOG_FILE_PATH=logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# モニタリング設定
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PROMETHEUS_PORT=9090
