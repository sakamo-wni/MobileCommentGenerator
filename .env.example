# Weather API
WXTECH_API_KEY=your-wxtech-api-key-here

# LLM Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Default LLM Provider
DEFAULT_LLM_PROVIDER=gemini

# Performance Mode Settings
LLM_PERFORMANCE_MODE=true
PERFORMANCE_GEMINI_MODEL=gemini-1.5-flash
MAX_LLM_WORKERS=8
MAX_EVALUATION_RETRIES=3

# Weather Configuration
WEATHER_FORECAST_HOURS_AHEAD=12
WEATHER_USE_OPTIMIZED_FORECAST=true
USE_ASYNC_WEATHER=true

# CSV Repository Settings
# LazyCommentRepositoryを常に使用
CSV_FORCE_LAZY_LOADING=true

# Application Settings
LOG_LEVEL=INFO
FLASK_ENV=development
FLASK_PORT=5001

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=100

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT_SECONDS=30

# Monitoring
ENABLE_MONITORING=true
MONITOR_PERFORMANCE=true