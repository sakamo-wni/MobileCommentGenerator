{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "compare_locations.ts",
    "extract_missing_locations.ts", 
    "compare_locations_detailed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "react-version",
    "shared"
  ]
}